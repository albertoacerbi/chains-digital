	pages = {251--259},
	file = {ScienceDirect Full Text PDF:/Users/albertoacerbi/Zotero/storage/ACVHR76P/Eriksson and Coultas - 2012 - The advantage of multiple cultural parents in the .pdf:application/pdf}
}

