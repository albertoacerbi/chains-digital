	month = jan,
	year = {2017},
	keywords = {Negativity bias, Cultural evolution, Cultural selection, Cultural attraction, Anxiety, Serial reproduction, Social transmission},
	pages = {92--101},
	file = {Submitted Version:/Users/albertoacerbi/Zotero/storage/JRFTTEUA/Bebbington et al. - 2017 - The sky is falling evidence of a negativity bias .pdf:application/pdf}
}

